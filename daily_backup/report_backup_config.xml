<?xml version="1.0" encoding="UTF-8"?>
<macro xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../MobaMacro.xsd">
   <name>report_backup_config</name>
   <desc>Full code file: report_backup_config.sql</desc>
   <environment>SQLPlus</environment>
   <hotkey>0</hotkey>
   <line type="Text">CLEAR SCREEN</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">PROMPT ########### Backup report #############</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">ARCHIVE LOG LIST</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">SET NUMWIDTH 20</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">set linesize 252</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column name format a30</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column value format a40</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column display_value format a40</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column description format a50</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column update_comment format a25</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">SELECT name,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">         VALUE,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">         DISPLAY_VALUE,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">         description,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">         update_comment</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">    FROM v$parameter</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">   WHERE name IN ('log_archive_dest',</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">                  'log_archive_dest_1',</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">                  'db_recovery_file_dest',</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">                  'db_recovery_file_dest_size',</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">                  'control_file_record_keep_time',</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">                  'db_create_file_dest',</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">                  'db_flashback_retention_target',</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">                  'undo_retention')</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">ORDER BY name;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">SELECT b.STATUS, b.FILENAME, b.BYTES</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">  FROM V$BLOCK_CHANGE_TRACKING b;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">set linesize 132</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column name format a30</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column value format a20</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column description format a50</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">SELECT NAME, VALUE,description</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">    FROM v$parameter</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">   WHERE name IN</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">             ('db_block_checking', 'db_block_checksum', 'db_lost_write_protect')</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">ORDER BY NAME;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">SELECT DBID, NAME, LOG_MODE, FORCE_LOGGING, FLASHBACK_ON FROM v$database;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">select distinct media, comments from v$backup_piece where sysdate-completion_time&lt;3;</line>
   <line type="KeyPress">RETURN</line>
</macro>
