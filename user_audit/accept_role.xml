<?xml version="1.0" encoding="UTF-8"?>
<macro xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../MobaMacro.xsd">
   <name>accept_role</name>
   <desc>Full code file: accept_role.sql</desc>
   <environment>SQLPlus</environment>
   <hotkey>0</hotkey>
   <line type="Text">set pagesize 100</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">SELECT * FROM dba_roles ORDER BY role;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">UNDEFINE ROLE</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">accept ROLE char prompt 'Enter Role: '</line>
   <line type="KeyPress">RETURN</line>
</macro>
