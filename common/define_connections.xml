<?xml version="1.0" encoding="UTF-8"?>
<macro xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../MobaMacro.xsd">
   <name>define_connections</name>
   <desc>Full code file: define_connections.sql</desc>
   <environment>Vi</environment>
   <hotkey>0</hotkey>
   <line type="Text">vi define_connections.sql</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">i</line>
   <line type="Text">prompt ######################################################################</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">prompt Define connection information for Oracle database using DBINV</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">prompt ######################################################################</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">set sqlprompt "_user '@' _connect_identifier &gt; "</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">UNDEFINE hostname</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">UNDEFINE service_name</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">UNDEFINE syscc</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">UNDEFINE rocc</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">UNDEFINE dbsnmp</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">UNDEFINE sysdba</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">UNDEFINE system</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column hostname new_value hostname</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column service_name new_value service_name</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column hostname format A15</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column service_name format A30</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column connect_ports format A6</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column sys_password format A30</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column system_password format A30</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column sys_username format A15</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column system_username format A30</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column system_username new_value system_username</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column system_password new_value system_password</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">SELECT h.DNS_HOST_NAME hostname,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">       h.SERVICE_NAME service_name,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">       connect_ports,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">       H.sys_password,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">       h.SYS_USERNAME,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">       h.SYSTEM_PASSWORD,</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">       H.SYSTEM_USERNAME</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">  FROM ora_host_instance h</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text"> WHERE ORA_INSTANCE_ID=&amp;picked_instance;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column first_port new_value first_port</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">select trim(nvl(substr(connect_ports,1, instr(connect_ports,',')-1), connect_ports)) first_port </line>
   <line type="KeyPress">RETURN</line>
   <line type="Text"> FROM ora_host_instance h</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text"> WHERE ORA_INSTANCE_ID=&amp;picked_instance;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column connect_string new_value connect_string</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">select '&amp;hostname:&amp;first_port/&amp;service_name' connect_string from dual;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column syscc new_value syscc</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column rocc new_value rocc</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column dbsnmp new_value dbsnmp</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">select 'sys_cc/M2ryhadal2mb**@&amp;connect_string' syscc from dual;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">select 'ro_cc/H0tsummerd2y**@&amp;connect_string' rocc from dual;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">select 'dbsnmp/uC52tdnsSFG6H!@&amp;connect_string' dbsnmp from dual;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column sysdba new_value sysdba</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">column system new_value system</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">select  SYS_USERNAME || '/' || sys_password || '@&amp;connect_string'   sysdba </line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">  from ora_host_instance where ORA_INSTANCE_ID=&amp;picked_instance;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">select  SYSTEM_USERNAME || '/' || system_password || '@&amp;connect_string'  system </line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">  from ora_host_instance where ORA_INSTANCE_ID=&amp;picked_instance;</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">define instance_list_filter</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">define hostname</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">define service_name</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">define dbsnmp</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">define syscc</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">define rocc</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">define sysdba</line>
   <line type="KeyPress">RETURN</line>
   <line type="Text">define system</line>
   <line type="KeyPress">RETURN</line>
   <line type="KeyPress">ESCAPE</line>
   <line type="KeyPress">COLON</line>
   <line type="Text">x</line>
   <line type="KeyPress">RETURN</line>
</macro>
